<%= form_with(model: subscriber, class: 'col-md-6') do |form| %>
  <% if subscriber.errors.any? %>
    <div style="color: red">
      <h5><%= pluralize(subscriber.errors.count, "error") %> prohibited this subscriber from being saved:</h5>

      <ul>
        <% subscriber.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :source, style: "display: block" %>
    <%= form.select :source, Subscriber.sources.collect { |s| [s[0], s[0]] }, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group mt-2">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
